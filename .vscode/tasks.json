{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Project (Dynamic)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "debugpy",
                "--listen",
                "localhost:${input:debugPort}",
                "--wait-for-client",
                "src/main.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/projects/${input:projectName}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Debugpy.*$",
                    "endsPattern": "^.*Waiting for debugger.*$"
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "debugPort",
            "type": "promptString",
            "description": "Enter debug port (avoid 5661-5760 range)",
            "default": "6000"
        },
        {
            "id": "projectName",
            "type": "pickString",
            "description": "Select project to debug",
            "options": ["project_a", "project_b"],
            "default": "project_a"
        }
    ]
}
