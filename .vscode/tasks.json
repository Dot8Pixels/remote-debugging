{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Project A",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "debugpy",
                "--listen",
                "localhost:5678",
                "--wait-for-client",
                "src/main.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/projects/project_a",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Debugpy.*$",
                    "endsPattern": "^.*Waiting for debugger.*$"
                }
            }
        }
    ]
}
